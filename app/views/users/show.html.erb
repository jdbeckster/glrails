<div class="container">
  <div class="row">
    
    <div class="col-md-4">
      <div class="card" style="width: 20rem;">
        <div class="card-block">
          <h3 class="card-title"><%= @user.username %></h3>
          <p class="card-text"><%= @user.name %></p>
          <% if current_user.following?(@user) %>
            <p class="card-text"><%= link_to "Unollow", unfollow_user_path(@user.username), method: :delete %></p>
          <% else %>
            <p class="card-text"><%= link_to "Follow", follow_user_path(@user.username), method: :post %></p>
          <% end %>  
        </div>
      </div>
    </div>

    <div class="col-md-8">

        <ul class="list-group">
          <% @tweets.each do |tweet| %>
            <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= tweet.user.username %></h5>
                <small>Upper right</small>
              </div>
              <p class="mb-1"><%= tweet.content %></p>
            <% end %>                      
          <% end %>
        </ul>

    </div>

  </div>
</div>